<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#706A6A"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="51dp"
        android:background="#422424"
        android:ems="10"
        android:hint="Input the players name"
        android:inputType="textPersonName"
        android:textColor="#FFFF"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtStrength"
        app:layout_constraintEnd_toEndOf="@+id/txtStrength"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtStrength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:background="#422424"
        android:ems="10"
        android:hint="Input the players strength as a number"
        android:inputType="textPersonName"
        android:textColor="#FFFF"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtSpeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtSpeed" />

    <EditText
        android:id="@+id/txtSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="41dp"
        android:background="#422424"
        android:ems="10"
        android:hint="Input the players speed as a number"
        android:inputType="textPersonName"
        android:textColor="#FFFF"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtStamina"
        app:layout_constraintEnd_toEndOf="@+id/txtStamina"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtStamina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="235dp"
        android:background="#422424"
        android:ems="10"
        android:hint="Input the players stamina as a number"
        android:inputType="textPersonName"
        android:textColor="#FFFF"
        android:textColorHint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Save to Server"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStamina" />
</androidx.constraintlayout.widget.ConstraintLayout>